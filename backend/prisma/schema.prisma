generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

enum CourseDifficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum LessonType {
  MULTI_CHOICE
  FILL_BLANK
  CODE_EDITOR
  DEBUG
  DRAG_DROP
}

enum LeagueTier {
  BRONZE
  SILVER
  GOLD
  SAPPHIRE
  RUBY
  EMERALD
  DIAMOND
}

enum FeedEventType {
  LESSON_COMPLETED
  ACHIEVEMENT_UNLOCKED
  LEAGUE_PROMOTION
  STREAK_MILESTONE
}

model User {
  id            String            @id @default(uuid())
  email         String            @unique
  username      String            @unique
  passwordHash  String?
  xp            Int               @default(0)
  level         Int               @default(1)
  streak        Int               @default(0)
  gems          Int               @default(0)
  hearts        Int               @default(5)
  lastStreakAt  DateTime?
  avatar        UserAvatar?
  role          Role              @default(USER)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  progresses        Progress[]
  userAchievements  UserAchievement[]
  userLeagues       UserLeague[]
  feedEvents        FeedEvent[]
  followers         Follow[]       @relation("followers")
  following         Follow[]       @relation("following")
  unlockedAvatarItems UnlockedAvatarItem[]
}

model UserAvatar {
  id           String @id @default(uuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  skinColor    String? 
  
  skinItemId   String?
  skinItem     AvatarItem? @relation("EquippedSkin", fields: [skinItemId], references: [id])
  
  faceItemId   String?
  faceItem     AvatarItem? @relation("EquippedFace", fields: [faceItemId], references: [id])
  
  hairItemId   String?
  hairItem     AvatarItem? @relation("EquippedHair", fields: [hairItemId], references: [id])
  
  outfitItemId String?
  outfitItem   AvatarItem? @relation("EquippedOutfit", fields: [outfitItemId], references: [id])
  
  accessoryItemId String?
  accessoryItem   AvatarItem? @relation("EquippedAccessory", fields: [accessoryItemId], references: [id])
  
  backgroundItemId String?
  backgroundItem   AvatarItem? @relation("EquippedBackground", fields: [backgroundItemId], references: [id])
}

enum AvatarItemType {
  SKIN
  FACE
  HAIR
  OUTFIT
  ACCESSORY
  BACKGROUND
}

enum AvatarItemRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

model AvatarItem {
  id          String           @id @default(uuid())
  type        AvatarItemType
  name        String
  assetUrl    String
  rarity      AvatarItemRarity @default(COMMON)
  unlockType  String?          
  unlockValue Int?             
  price       Int              @default(0) 

  unlockedBy  UnlockedAvatarItem[]
  
  equippedSkins       UserAvatar[] @relation("EquippedSkin")
  equippedFaces       UserAvatar[] @relation("EquippedFace")
  equippedHairs       UserAvatar[] @relation("EquippedHair")
  equippedOutfits     UserAvatar[] @relation("EquippedOutfit")
  equippedAccessories UserAvatar[] @relation("EquippedAccessory")
  equippedBackgrounds UserAvatar[] @relation("EquippedBackground")
}

model UnlockedAvatarItem {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemId    String
  item      AvatarItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  acquiredAt DateTime   @default(now())

  @@unique([userId, itemId])
}

model Course {
  id         String            @id @default(uuid())
  language   String
  difficulty CourseDifficulty
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  lessons    Lesson[]
}

model Lesson {
  id         String      @id @default(uuid())
  courseId   String
  course     Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title      String
  type       LessonType
  content    Json
  xpReward   Int
  position   Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  progresses Progress[]

  @@index([courseId, position])
}

model Progress {
  id          String    @id @default(uuid())
  userId      String
  lessonId    String
  completed   Boolean   @default(false)
  score       Int       @default(0)
  completedAt DateTime?

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson      Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Achievement {
  id          String            @id @default(uuid())
  name        String
  description String
  icon        String
  criteria    Json
  createdAt   DateTime          @default(now())

  users       UserAchievement[]
}

model UserAchievement {
  id            String       @id @default(uuid())
  userId        String
  achievementId String
  achievedAt    DateTime     @default(now())

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement  @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

model League {
  id        String      @id @default(uuid())
  tier      LeagueTier
  weekStart DateTime
  weekEnd   DateTime

  users     UserLeague[]

  @@index([tier, weekStart, weekEnd])
}

model UserLeague {
  id         String   @id @default(uuid())
  userId     String
  leagueId   String
  rank       Int
  xpThisWeek Int      @default(0)

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  league     League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@unique([userId, leagueId])
}

model FeedEvent {
  id        String         @id @default(uuid())
  userId    String
  type      FeedEventType
  payload   Json
  createdAt DateTime       @default(now())

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User     @relation("followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}
